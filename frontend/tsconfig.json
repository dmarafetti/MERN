{
  "compilerOptions": {
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM","ESNext"],
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "removeComments": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
